{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src", "build.config.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
